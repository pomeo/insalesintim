extends layout

block content
  div.uk-grid.uk-height-1-1
    div.uk-width-1-3.uk-height-1-1 &nbsp;
    div.uk-width-1-3.uk-height-1-1
      div.uk-vertical-align.uk-height-1-1
        div.uk-vertical-align-middle
          form.uk-form
            fieldset(data-uk-margin)
              legend Вход в партнёрскую панель
              div.uk-form-icon.uk-form-row
                i.uk-icon-envelope
                input.uk-form-width-medium(type="text", placeholder="E-mail")
              div.uk-form-icon.uk-form-row
                i.uk-icon-lock
                input.uk-form-width-medium(type="password", placeholder="Пароль")
              div.uk-form-row
                button.uk-button Войти
    div.uk-width-1-3.uk-height-1-1 &nbsp;
